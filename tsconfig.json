{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@mkn-types/*": ["types/*"],
      "@components/*": ["client/src/components/*"],
      "@hooks/*": ["client/src/hooks/*"],
      "@store/*": ["client/src/store/*"],
      "@api/*": ["client/lib/api/*"],
      "@design/*": ["client/lib/design/*"],
      "@util/*": ["client/lib/util/*"],
      "@client-types/*": ["client/types/*"],
    },
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "types"
  ],
  "exclude": ["node_modules"]
}
